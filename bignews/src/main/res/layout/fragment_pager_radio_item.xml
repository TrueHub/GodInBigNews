<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f7f3f3"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/arrow"
        android:id="@+id/radio_item_tv"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_height="200dp">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/radio_item_iv1"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/radio_item_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/radio_item_iv2"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/radio_item_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/radio_item_iv3"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/radio_item_tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
