<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.MainActivity">

    <FrameLayout
        android:layout_above="@+id/mainactivity_activity_gradiogrounp"
        android:id="@+id/mainactivity_activity_framlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <RadioGroup
        android:checkedButton="@+id/mainactivity_activity_but_news"
        android:layout_alignParentBottom="true"
        android:background="#22909090"
        android:orientation="horizontal"
        android:id="@+id/mainactivity_activity_gradiogrounp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            style="@style/mainactivity_activity_radiogrounp_but"
            android:id="@+id/mainactivity_activity_but_news"
            android:text="新闻"
            android:tag="0"

            android:drawableTop="@drawable/mainactivity_but_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            style="@style/mainactivity_activity_radiogrounp_but"
            android:id="@+id/mainactivity_activity_but_read"
            android:text="阅读"
            android:tag="1"
            android:drawableTop="@drawable/mainactivity_but_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            style="@style/mainactivity_activity_radiogrounp_but"
            android:id="@+id/mainactivity_activity_but_vedio"
            android:text="视听"
            android:tag="2"
            android:drawableTop="@drawable/mainactivity_but_vedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            style="@style/mainactivity_activity_radiogrounp_but"
            android:id="@+id/mainactivity_activity_but_find"
            android:text="发现"
            android:tag="3"
            android:drawableTop="@drawable/mainactivity_but_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            style="@style/mainactivity_activity_radiogrounp_but"
            android:id="@+id/mainactivity_activity_but_my"
            android:text="我的"
            android:tag="4"
            android:drawableTop="@drawable/mainactivity_but_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>
</RelativeLayout>
