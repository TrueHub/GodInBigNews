<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Foundlistview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/Foundlistview_firstImg"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/Foundlistview_title"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/Foundlistview_Linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Foundlistview_firstImg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Foundlistview_author_name"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/Foundlistview_realtype"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"

            />

        <TextView
            android:id="@+id/Foundlistview_date"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"

            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:id="@+id/Foundlistview_share"
            android:src="@mipmap/fengxiang" />

    </LinearLayout>


</RelativeLayout>