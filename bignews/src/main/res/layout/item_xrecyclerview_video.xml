<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_recyclerview_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/item_recyclerview_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/item_recyclerview_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/item_xrecyclerview_tv"
        android:textColor="#000000"
        android:layout_below="@+id/item_recyclerview_relativelayout"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</RelativeLayout>
