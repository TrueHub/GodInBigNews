<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/fragment_news_backcolor"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="标题"

            android:textColor="@color/fragment_top_title"
            android:textSize="@dimen/fragment_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itme_fragment_news_item10_title"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/fragment_news_futitle"
            android:layout_height="match_parent"/>
        <TextView
            android:text="时间"
            android:textColor="@color/fragment_news_futitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itme_fragment_news_item10_time"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/item_fragment_news_item10_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>