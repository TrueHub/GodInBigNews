<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative_container_item_read_recommand"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/readfragment_rcv_item"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v7.widget.CardView
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/tv_item_read_recommand_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="@dimen/text_normal"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorblack"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iv_item_read_recommand"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/iv_item_read_recommand" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/iv_item_read_recommand"
            android:src="@drawable/no_loading"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <View
            android:layout_below="@id/iv_item_read_recommand"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorTextNormal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/view" />

        <TextView
            android:id="@+id/tv_item_read_recommand_soucre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:textColor="@color/colorTextNormal"
            android:textSize="15sp"
            android:layout_below="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_read_recommand_delete"
            android:text="Ã—"
            android:textColor="@color/colorTextNormal"
            android:textSize="25sp"
            android:layout_alignBaseline="@+id/tv_item_read_recommand_soucre"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>